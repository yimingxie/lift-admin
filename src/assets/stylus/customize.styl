// ==================================================
// 定制
// ==================================================
@import 'utilities'

body, h1, h2, h3, h4, h5, h6, hr, p, blockquote, dl, dt, dd, ul, ol, li, pre, form, fieldset, legend, button, input, textarea, th, td { margin:0; padding:0; }
html
body
  margin 0
  font-size 14px
  font-family font-stack!important
  color font-color
  line-height default-line-height
  background-color #E8EAEA
  // background url('../images/outWrap.png') no-repeat center center
  // background-size:cover
  // background-attachment:fixed
  // -webkit-font-smoothing antialiased


// 超链接
// ------------------------------
a
a:visited
  color link-color
  text-decoration none

a:hover
  color highlight-link-color
  text-decoration underline
  cursor pointer

a:focus
  outline none

.fa:hover
  text-decoration none

// 斜体
// ------------------------------
i
  font-style normal

// 列表
// ------------------------------
ul
ol
  reset-list()

li
  line-height 1.5

// 表单元素
// ------------------------------

// 移除input和textarea元素默认的聚焦样式
input:focus
textarea:focus
  outline none

// 去除 iOS 输入框默认圆角和阴影
input[type="text"]
input[type="password"]
input[type="number"]
textarea
  appearance none
  // border-radius 0

// 去除数字输入框后面的小尾巴
input[type="number"]::-webkit-inner-spin-button
input[type="number"]::-webkit-outer-spin-button
  appearance none
  margin 0
  height auto

input:-webkit-autofill
  // box-shadow 0 0 0px 1000px #FAFAFA inset
  -webkit-box-shadow: 0 0 0 10000px #fafafa inset
  background-color: transparent!important
  &:hover,
  &:focus,
  &:active
    -webkit-transition-delay: 99999s
    -webkit-transition: all 99999s ease-out

// 其他
pre
  white-space pre-wrap
  word-wrap break-word
  font-size 12px

  div
    &:hover
      background #F3F3F3
button, input, select, textarea{
  margin: 0;
  padding: 0;
  border: 1px solid transparent;  //自定义边框
  outline: none;    //消除默认点击蓝色边框效果
  font-family: font-stack 
}
table{
  border-collapse:collapse; /*表格的边框合并，如果相邻，则共用一个边框*/
  border-spacing:0; /*设置行与单元格边框的间距。当表格边框独立（即border-collapse:separate;）此属性才起作用*/
} 
table td{
  word-break: break-all; /*允许在字内换行,即单词可分*/
  word-wrap:break-word;/*允许长单词或URL地址换行*/
}

div{
  outline: none;
}